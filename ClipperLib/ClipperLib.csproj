<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net40;netstandard1.4</TargetFrameworks>
    <AssemblyName>clipper_library</AssemblyName>
    <OutputType>library</OutputType>
    
    <Version Condition="$(BuildVersion) != ''">$(BuildVersion)</Version>
    <Version Condition="$(Version) == ''">6.4.2-dev</Version>

    <IsPackable>true</IsPackable>
    <PackagedId>Clipper</PackagedId>
    <Title>Clipper</Title>
    <Authors>Angus Johnson</Authors>
    <PackageLicenseUrl>http://www.boost.org/LICENSE_1_0.txt</PackageLicenseUrl>
    <PackageProjectUrl>http://www.angusj.com/delphi/clipper.php</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>The Clipper library performs clipping and offsetting for both lines and polygons. All four boolean clipping operations are supported - intersection, union, difference and exclusive-or. Polygons can be of any shape including self-intersecting polygons.</Description>
    <PackageTags>Clipper polygon lines intersection union difference exclusiveor</PackageTags>
  </PropertyGroup>
</Project>